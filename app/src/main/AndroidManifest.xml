<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.kaka.myreader">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ReaderActivity"
            android:label="@string/title_activity_reader"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChapterActivity"
            android:label="@string/title_activity_capture"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.FileSearchActivity"
            android:label="@string/title_activity_fileSearch"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DownloadStatusActivity"
            android:label="@string/title_activity_downloadstatus"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CloudDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterByPhoneActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterByMailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterAuthCodeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AccoutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddCommitActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PhotoPickerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.PhotoClipActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>
